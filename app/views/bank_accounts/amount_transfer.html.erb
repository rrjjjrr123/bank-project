<%= form_tag transfer_user_bank_accounts_path(current_user.id) do %>
  <div class="container">
    <div class="row">
      <div class="col-sm-4">
        Debit Account_number<%= text_field_tag 'debit_acc', @bank_account.account_number, readonly: true %>   
      </div> 
      <div class="col-sm-4">
        Credit Account Number <%= text_field_tag 'credit_acc' %>
      </div>
      <div class="col-sm-4">
        Amount <%= number_field_tag 'amount' %>
      </div>
      <div class="col-sm-4">
        <%=submit_tag "Submit", class: "btn btn-primary"%>
      </div>
    </div>
  </div>
